<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#E0E0E0">
    <Button
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/question"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:layout_marginEnd="8dp"
            android:layout_marginTop="25dp"
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="@string/menu"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:id="@+id/edittext"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp"
            android:layout_marginTop="80dp"
            android:textAllCaps="false"
            android:textSize="45sp"
            android:inputType="textNoSuggestions"
    />
    <TextView
            android:layout_width="match_parent"
            android:layout_height="480dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintVertical_bias="1.0"
            android:id="@+id/textView"
            android:textAllCaps="false"
            android:textSize="35sp"
    />
    <RelativeLayout
            android:id="@+id/keyboard_panel"
            android:elevation="15dp"
            android:layout_width="match_parent"
            android:layout_height="480dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintVertical_bias="1.0"
            android:background="@drawable/keyboard_panel"
    >

        <View
                android:id="@+id/swipe_button"
                android:layout_marginTop="3dp"
                android:layout_width="50dp"
                android:layout_height="5dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/swipe_button_top"
        />
        <include layout="@layout/keyboard_switcher"
                 android:layout_width="match_parent"
                 android:layout_height="20dp"
                 android:layout_marginTop="12dp"
        />
        <RelativeLayout
                        android:id="@+id/keyboard"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
            <include layout="@layout/more_keyboard_layout"
                     android:layout_height="match_parent"
                     android:layout_width="match_parent"
                     android:layout_marginTop="35dp"
            />
            <include layout="@layout/main_keyboard_layout"
                     android:layout_height="match_parent"
                     android:layout_width="match_parent"
                     android:layout_marginTop="35dp"
            />
            <include layout="@layout/digits_keyboard_layout"
                     android:layout_height="match_parent"
                     android:layout_width="match_parent"
                     android:layout_marginTop="35dp"/>
        </RelativeLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>