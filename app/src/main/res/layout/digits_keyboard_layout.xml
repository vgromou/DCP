<?xml version="1.0" encoding="utf-8"?>
<GridLayout
        android:alignmentMode="alignBounds"
        android:columnCount="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="1.0"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <Button
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:background="@drawable/rounded_left_up"
            android:textAllCaps="false"
            android:text="1"
            android:textSize="30sp"
            android:id="@+id/cos"
    />
    <Button
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:background="@android:color/background_light"
            android:textAllCaps="false"
            android:text="2"
            android:textSize="30sp"
    />
    <Button
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:background="@drawable/rounded_right_up"
            android:textAllCaps="false"
            android:text="3"
            android:textSize="30sp"
    />
    <Button
            android:layout_marginStart="5dp"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:background="@drawable/rounded_left_up"
            android:textAllCaps="false"
            android:text="@string/delete"
            android:textSize="30sp"
    />
    <Button
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:background="@android:color/background_light"
            android:textAllCaps="false"
            android:text="4"
            android:textSize="30sp"
            android:layout_row="1"
            android:layout_column="0"
    />
    <Button
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:background="@android:color/background_light"
            android:textAllCaps="false"
            android:text="5"
            android:textSize="30sp"
    />
    <Button
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:background="@android:color/background_light"
            android:textAllCaps="false"
            android:text="6"
            android:textSize="30sp"
    />
    <Button
            android:layout_marginStart="5dp"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:background="@android:color/background_light"
            android:textAllCaps="false"
            android:text="@string/divide"
            android:textSize="30sp"
    />
    <Button
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:background="@android:color/background_light"
            android:textAllCaps="false"
            android:text="7"
            android:textSize="30sp"
            android:layout_row="2"
            android:layout_column="0"
    />
    <Button
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:background="@android:color/background_light"
            android:textAllCaps="false"
            android:text="8"
            android:textSize="30sp"
    />
    <Button
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:background="@android:color/background_light"
            android:textAllCaps="false"
            android:text="9"
            android:textSize="30sp"
    />
    <Button
            android:layout_marginStart="5dp"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:background="@android:color/background_light"
            android:textAllCaps="false"
            android:text="@string/multiply"
            android:textSize="30sp"
    />
    <Button
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:background="@android:color/background_light"
            android:textAllCaps="false"
            android:text="."
            android:textSize="30sp"
            android:layout_row="3"
            android:layout_column="0"
    />
    <Button
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:background="@android:color/background_light"
            android:textAllCaps="false"
            android:text="0"
            android:textSize="30sp"
    />
    <Button
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:background="@android:color/background_light"
            android:textAllCaps="false"
            android:text="@string/x"
            android:textSize="30sp"
    />
    <Button
            android:layout_marginStart="5dp"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:background="@android:color/background_light"
            android:textAllCaps="false"
            android:text="@string/substract"
            android:textSize="30sp"
    />
    <Button
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:background="@drawable/rounded_left_down"
            android:textAllCaps="false"
            android:text="@string/opening_bracket"
            android:textSize="30sp"
            android:layout_row="4"
            android:layout_column="0"/>
    <Button
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:background="@android:color/background_light"
            android:textAllCaps="false"
            android:text="@string/closing_bracket"
            android:textSize="30sp"
    />
    <Button
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:background="@drawable/rounded_right_down"
            android:textAllCaps="false"
            android:text="@string/equal"
            android:textSize="30sp"
    />
    <Button
            android:layout_marginStart="5dp"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:background="@drawable/rounded_left_down"
            android:textAllCaps="false"
            android:text="@string/add"
            android:textSize="30sp"
            android:drawableBottom="@android:color/black"
    />
</GridLayout>
