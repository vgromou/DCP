<?xml version="1.0" encoding="utf-8"?>
<GridLayout
        android:alignmentMode="alignBounds"
        android:columnCount="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="1.0"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <Button



            android:layout_width="100dp"
            android:layout_height="85dp"
            android:background="@drawable/rounded_left_up"
            android:textAllCaps="false"
            android:text="1"
            android:textSize="30sp"
            android:id="@+id/digit_1"
    />
    <Button



            android:layout_width="100dp"
            android:layout_height="85dp"
            android:background="@android:color/background_light"
            android:textAllCaps="false"
            android:text="2"
            android:textSize="30sp"
            android:id="@+id/digit_2"
    />
    <Button



            android:layout_width="100dp"
            android:layout_height="85dp"
            android:background="@drawable/rounded_right_up"
            android:textAllCaps="false"
            android:text="3"
            android:textSize="30sp"
            android:id="@+id/digit_3"
    />
    <include layout="@layout/delete"
             android:layout_marginStart="5dp"
             android:layout_width="100dp"
             android:layout_height="85dp"
             android:id="@+id/digit_include_delete"
    />
    <Button
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:background="@android:color/background_light"
            android:textAllCaps="false"
            android:text="4"
            android:textSize="30sp"
            android:layout_row="1"
            android:layout_column="0"
            android:id="@+id/digit_4"
    />
    <Button
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:background="@android:color/background_light"
            android:textAllCaps="false"
            android:text="5"
            android:textSize="30sp"
            android:id="@+id/digit_5"
    />
    <Button
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:background="@android:color/background_light"
            android:textAllCaps="false"
            android:text="6"
            android:textSize="30sp"
            android:id="@+id/digit_6"
    />
    <include layout="@layout/divide"
             android:layout_marginStart="5dp"
             android:layout_width="100dp"
             android:layout_height="85dp"
             android:id="@+id/digit_include_divide"
    />
    <Button
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:background="@android:color/background_light"
            android:textAllCaps="false"
            android:text="7"
            android:textSize="30sp"
            android:layout_row="2"
            android:layout_column="0"
            android:id="@+id/digit_7"
    />
    <Button



            android:layout_width="100dp"
            android:layout_height="85dp"
            android:background="@android:color/background_light"
            android:textAllCaps="false"
            android:text="8"
            android:textSize="30sp"
            android:id="@+id/digit_8"
    />
    <Button



            android:layout_width="100dp"
            android:layout_height="85dp"
            android:background="@android:color/background_light"
            android:textAllCaps="false"
            android:text="9"
            android:textSize="30sp"
            android:id="@+id/digit_9"
    />
    <include layout="@layout/multiply"
            android:layout_marginStart="5dp"
            android:layout_width="100dp"
            android:layout_height="85dp"
             android:id="@+id/digit_include_multiply"
    />
    <Button
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:background="@android:color/background_light"
            android:textAllCaps="false"
            android:text="."
            android:textSize="30sp"
            android:layout_row="3"
            android:layout_column="0"
            android:id="@+id/button_point"
    />
    <Button
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:background="@android:color/background_light"
            android:textAllCaps="false"
            android:text="0"
            android:textSize="30sp"
            android:id="@+id/digit_0"
    />
    <include layout="@layout/x_button"
            android:layout_width="100dp"
            android:layout_height="85dp"
             android:id="@+id/digit_include_x"
    />
    <include layout="@layout/subtract"
            android:layout_marginStart="5dp"
            android:layout_width="100dp"
            android:layout_height="85dp"
             android:id="@+id/digit_include_subtract"
    />
    <include layout="@layout/open_bracket"
            android:layout_width="100dp"
            android:layout_height="85dp"
             android:id="@+id/digit_include_open"
    />
    <include layout="@layout/close_bracket"
            android:layout_width="100dp"
            android:layout_height="85dp"
             android:id="@+id/digit_include_close"
    />
    <include layout="@layout/calculate_button"
            android:layout_width="100dp"
            android:layout_height="85dp"
             android:id="@+id/digit_include_calculate"
    />
    <include layout="@layout/add_button"
            android:layout_marginStart="5dp"
            android:layout_width="100dp"
            android:layout_height="85dp"
             android:id="@+id/digit_include_add"
    />
</GridLayout>
